{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "调试 Vite 项目",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "调试 Vite 服务端",
            "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
            "args": [
                "--force"
            ]
        }
    ]
}